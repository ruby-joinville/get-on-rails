<p id="notice"><%= notice %></p>

<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-compact-disc"></i>
    Releases by <%= link_to "#{@artist.name}", artist_path(@artist) %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @releases.each do |release| %>
            <tr>
              <td>
                <%= link_to release.title, artist_release_path(artist_id: @artist.id, id: release.id) %>    
              </td>
              <td class="text-center">
                <%= link_to edit_artist_release_path(artist_id: @artist.id, id: release.id) do %>
                  <i class="fas fa-pencil-alt"></i>
                <% end %>
                <%= link_to artist_release_path(artist_id: @artist.id, id: release.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to(t('.new'), new_artist_release_path, class: "btn btn-primary btn-lg btn-block login-button") %>
  <%= link_to('Import', '#', class: "btn btn-primary btn-lg btn-block login-button", 'data-toggle' => "modal", 'data-target'=>"#importArtistReleasesModal" ) %>
</div>

<div class="modal fade" id="importArtistReleasesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Import Artist Releases</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_with(url: import_artist_releases_path, local: true) do |form| %>
        <div class="modal-body">
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <div class="form-group">
                  <label for="name" class="control-label custom-control-label">Releases</label>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fas fa-compact-disc" aria-hidden="true"></i></span>
                    <input type="number" class="form-control" id="import-artist-releases" name="import_artist_releases[max_results]" value="">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Import</button>
        </div>
      </div>
    <% end %>
  </div>
</div>